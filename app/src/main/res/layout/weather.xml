<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_recyclerview_yaliji_fragment_viewpager_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="@dimen/card_Corner_Radius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="3dp">

        <TextView
            android:id="@+id/textview0"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textview1"
            android:text="日期:" />
        <TextView
            android:id="@+id/tv_weather_data"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview0"
            android:padding="0.5dp"
            android:text="万能机1"
            android:textColor="@color/black_87_percent_alpha"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview1"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview0"
            android:text="白天：" />

        <TextView
            android:id="@+id/tv_weather_daytime"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview2"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:text="晚上：" />

        <TextView
            android:id="@+id/tv_weather_night"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview2"
            android:layout_toRightOf="@+id/textview2"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview3"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:text="温度：" />

        <TextView
            android:id="@+id/tv_weather_tempreture"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview3"
            android:layout_toRightOf="@+id/textview3"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview4"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview3"
            android:text="星期：" />

        <TextView
            android:id="@+id/tv_weather_weak"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview4"
            android:layout_toRightOf="@+id/textview4"
            android:singleLine="true"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview5"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview4"
            android:text="风力：" />

        <TextView
            android:id="@+id/tv_weather_cloud"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview5"
            android:layout_toRightOf="@+id/textview5"
            android:singleLine="true"
            android:text="万能机1" />



    </RelativeLayout>
</android.support.v7.widget.CardView>