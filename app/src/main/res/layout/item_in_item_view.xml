<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_test_type_item_in_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="left"
        android:lines="1"
        android:text="试验类型："
        android:textColor="@color/secondary_text_default_material_light"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_test_count_item_in_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/primary_text_default_material_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_disqualification_count_item_in_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/material_red_400"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_disposition_count_item_in_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/primary_text_default_material_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_disposition_rate_item_in_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/material_red_400"
        android:textStyle="bold" />
</LinearLayout>
