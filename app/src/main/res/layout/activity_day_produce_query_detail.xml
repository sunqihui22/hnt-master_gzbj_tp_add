<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_50"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv_overproof_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!--详情数据部分-->
            <android.support.v7.widget.CardView
                android:id="@+id/cv_overproof_detail_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                card_view:cardCornerRadius="@dimen/card_Corner_Radius">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="日期"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_caijichanliang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="采集产量（kg）"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_panshu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="盘数"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_xiuzhengchanliang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="修正产量（kg）"
                            android:digits="-123456789.00~123456789.00"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_biaozhunmidu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="标准密度（kg/m2）"
                            android:digits="123456789.00"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_shigongzhuanghao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="施工桩号"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_changdu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="长度（m）"
                            android:singleLine="true"
                            android:digits="123456789.00"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_kuandu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="宽度（m）"
                            android:digits="123456789.00"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_houdu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="厚度（cm）（自动计算，无法输入）"
                            android:singleLine="true"
                            android:digits="123456789.00"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_shejihoudu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="设计厚度"
                            android:singleLine="true"
                            android:digits="123456789.00"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_xinghao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="型号"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                        app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="备注"
                            android:singleLine="true"
                            android:textSize="@dimen/login_register_editview_text_size" />
                    </android.support.design.widget.TextInputLayout>

                    <!-- 按钮所在行 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_Calculation"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:backgroundTint="@color/material_green_100"
                            android:gravity="center"
                            android:text="计算" />

                        <Button
                            android:id="@+id/bt_submit"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:backgroundTint="@color/material_yellow_200"
                            android:gravity="center"
                            android:text="@string/submit" />


                        <Button
                            android:id="@+id/bt_cancel"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/material_accentPink_a100"
                            android:gravity="center"
                            android:text="清空" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
