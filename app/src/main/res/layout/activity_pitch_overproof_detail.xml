<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_50"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ptr_produce_query_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightest_gray"
            cube_ptr:ptr_duration_to_close="200"
            cube_ptr:ptr_duration_to_close_header="1000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.7">

            <com.shtoone.shtw.ui.PageStateLayout
                android:id="@+id/psl_produce_query_detail_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:emptyView="@layout/page_state_empty_view"
                app:errorView="@layout/page_state_error_view"
                app:loadingView="@layout/page_state_loading_view"
                app:netErrorView="@layout/page_state_net_error_view">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nsv_produce_query_detail_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <!--详情数据部分-->
                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_produce_query_detail_activity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="?android:attr/selectableItemBackground"
                            card_view:cardCornerRadius="@dimen/card_Corner_Radius">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <LinearLayout
                                    android:id="@+id/shengchanchaxun_xq_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white_70_percent_alpha"
                                    android:orientation="vertical" >
                                    <!-- 出料时间 -->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp" >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="出料时间"
                                            android:textColor="@color/orange" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="10sp"
                                            android:textColor="@color/black" />
                                    </LinearLayout>

                                    <!-- 油石比 -->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp" >

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="油石比"
                                            android:textColor="@color/orange" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_sjysb"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/black" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:text="理论"
                                            android:textColor="@color/blue" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_llysb"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/green" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:text="误差率："
                                            android:textColor="@color/blue" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_wcysb"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/green" />
                                    </LinearLayout>

                                    <!-- 沥青温度 -->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white_70_percent_alpha"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp" >

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="沥青温度"
                                            android:textColor="@color/orange" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_liqinwendu"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="20sp"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:textColor="@color/black" />
                                    </LinearLayout>

                                    <!-- 石料温度 -->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp" >

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="石料温度"
                                            android:textColor="@color/orange" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_shiliaowendu"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="20sp"
                                            android:layout_weight="1"
                                            android:gravity="right" />
                                    </LinearLayout>

                                    <!-- 出料温度 -->

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp" >

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="出料温度"
                                            android:textColor="@color/orange" />

                                        <android.support.v7.widget.RecyclerView
                                            android:id="@+id/rv_produce_query_detail_activity"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1" />

                                        <TextView
                                            android:id="@+id/scchaxun_xq_chuliaowendu"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="20sp"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:textColor="@color/black" />
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <!--表部分-->
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="40dp"
                            card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="3dp">

                                <TextView
                                    style="@style/DetailTextTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="核算表" />

                                <!-- 表头部分 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/material_name" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="实际用量(kg)" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="实际比(%)" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="配比(%)" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/deviation_rate" />
                                </LinearLayout>

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_overproof_detail_activity"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <!--处置部分-->
                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_handle_overproof_detail_activity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            card_view:cardCornerRadius="@dimen/card_Corner_Radius"
                            card_view:contentPadding="3dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="30dp"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/DetailTextTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="超标处置" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="145dp"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/iv_photo_select_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="5dp"
                                            android:src="@drawable/ic_camera_album" />

                                        <LinearLayout
                                            android:id="@+id/ll_camera_album_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:orientation="vertical"
                                            android:visibility="gone">

                                            <ImageView
                                                android:id="@+id/iv_camera_select_overproof_detail_activity"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:src="@drawable/ic_camera" />

                                            <ImageView
                                                android:id="@+id/iv_album_select_overproof_detail_activity"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:src="@drawable/ic_album" />

                                        </LinearLayout>
                                    </FrameLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <android.support.design.widget.TextInputLayout
                                            android:id="@+id/et_handle_person_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                                            app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="@string/handle_person"
                                                android:singleLine="true"
                                                android:textSize="@dimen/login_register_editview_text_size" />
                                        </android.support.design.widget.TextInputLayout>

                                        <android.support.design.widget.TextInputLayout
                                            android:id="@+id/et_handle_time_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                                            app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:focusable="false"
                                                android:hint="@string/handle_time"
                                                android:singleLine="true"
                                                android:textSize="@dimen/login_register_editview_text_size" />
                                        </android.support.design.widget.TextInputLayout>

                                        <android.support.design.widget.TextInputLayout
                                            android:id="@+id/et_handle_reason_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                                            app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="@string/handle_reason"
                                                android:singleLine="true"
                                                android:textSize="@dimen/login_register_editview_text_size" />
                                        </android.support.design.widget.TextInputLayout>

                                        <android.support.design.widget.TextInputLayout
                                            android:id="@+id/et_handle_way_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                                            app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="@string/handle_way"
                                                android:singleLine="true"
                                                android:textSize="@dimen/login_register_editview_text_size" />
                                        </android.support.design.widget.TextInputLayout>

                                        <android.support.design.widget.TextInputLayout
                                            android:id="@+id/et_handle_result_overproof_detail_activity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:errorTextAppearance="@style/MaterialLoginTheme.TextAppearanceLoginError"
                                            app:theme="@style/MaterialLoginTheme.TextAppearanceLogin">

                                            <EditText
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="@string/handle_result"
                                                android:singleLine="true"
                                                android:textSize="@dimen/login_register_editview_text_size" />
                                        </android.support.design.widget.TextInputLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/bt_handle_submit_overproof_detail_activity"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="40dp"
                                        android:backgroundTint="@color/material_green_100"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:text="@string/submit" />

                                    <Button
                                        android:id="@+id/bt_handle_reset_overproof_detail_activity"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/material_yellow_200"
                                        android:enabled="false"
                                        android:gravity="center"
                                        android:text="@string/reset" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </com.shtoone.shtw.ui.PageStateLayout>
        </in.srain.cube.views.ptr.PtrFrameLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
