<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_recyclerview_yaliji_fragment_viewpager_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="@dimen/card_Corner_Radius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_title_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0.5dp"
            android:text="2016-06-01"
            android:textColor="@color/black_87_percent_alpha"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview1"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:text="试件编号：" />

        <TextView
            android:id="@+id/tv_test_number_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview2"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:text="设计强度：" />

        <TextView
            android:id="@+id/tv_design_strength_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview2"
            android:layout_toRightOf="@+id/textview2"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview3"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:text="强度代表：" />

        <TextView
            android:id="@+id/tv_central_value_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview3"
            android:layout_toRightOf="@+id/textview3"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview4"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview3"
            android:text="工程名称：" />

        <TextView
            android:id="@+id/tv_project_name_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview4"
            android:layout_toRightOf="@+id/textview4"
            android:singleLine="true"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview5"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview4"
            android:text="施工部位：" />

        <TextView
            android:id="@+id/tv_position_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview5"
            android:layout_toRightOf="@+id/textview5"
            android:singleLine="true"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview6"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview5"
            android:text="试验类型：" />

        <TextView
            android:id="@+id/tv_testtype_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview6"
            android:layout_toRightOf="@+id/textview6"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview7"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview6"
            android:text="设备名称：" />

        <TextView
            android:id="@+id/tv_equipment_item_recyclerview_yaliji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview7"
            android:layout_toRightOf="@+id/textview7" />

    </RelativeLayout>

    <com.shtoone.shtw.ui.SlantedTextView
        android:id="@+id/stv_qualified_item_recyclerview_yaliji_fragment_viewpager_fragment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|right"
        android:gravity="center"
        app:slantedBackgroundColor="@color/material_green_300"
        app:slantedLength="30dp"
        app:slantedMode="right"
        app:slantedText="合格"
        app:slantedTextColor="@color/white"
        app:slantedTextSize="13sp" />

    <com.shtoone.shtw.ui.SlantedTextView
        android:id="@+id/stv_handle_item_recyclerview_yaliji_fragment_viewpager_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:gravity="center"
        android:visibility="gone"
        app:slantedBackgroundColor="@color/material_yellow_A700"
        app:slantedLength="25dp"
        app:slantedMode="right_bottom_triangle"
        app:slantedText="已处置"
        app:slantedTextColor="@color/material_red_400"
        app:slantedTextSize="12sp" />
</android.support.v7.widget.CardView>