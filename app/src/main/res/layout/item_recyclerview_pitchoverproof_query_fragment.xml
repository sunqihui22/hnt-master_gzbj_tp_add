<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_recyclerview_pitchoverproof_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="@dimen/card_Corner_Radius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_70_percent_alpha"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <LinearLayout
            android:id="@+id/chaobiaochaxun_item_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chaobiaochaxun_bhjname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="拌合机名称" />

            <TextView
                android:id="@+id/chaobiaochaxun_shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="时间" />

            <TextView
                android:id="@+id/chaobiaochaxun_bianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:singleLine="true"
                android:text="编号" />

            <!--<TextView-->
            <!--android:id="@+id/chaobiaochaxun_lijichuzhi"-->
            <!--android:layout_width="0dp"-->
            <!--android:singleLine="true"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="right"-->
            <!--android:textColor="@color/black" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chaobiaochaxun_item_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 第一行 -->
            <LinearLayout
                android:id="@+id/chaobiaochaxun_item_lineone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj1_z1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="粉料1" />


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj2_z2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="粉料2" />


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj3_z3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料1" />


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj4_z4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料2" />

                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj5_z5"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料3" />

                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj6_z6"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料4" />

            </LinearLayout>

            <!-- 第二行 -->
            <LinearLayout
                android:id="@+id/chaobiaochaxun_item_linetwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj7_z7"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料5" />


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj8_z8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料6" />

                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj9_z9"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="石料7" />

                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj10_z10"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true" />


                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj11_z11"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/chaobiaochaxun_item_sj12_z12"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.shtoone.shtw.ui.SlantedTextView
        android:id="@+id/stv_hege_and_chuzhi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|right"
        android:gravity="center"
        android:visibility="gone"
        app:slantedBackgroundColor="@color/material_green_300"
        app:slantedLength="30dp"
        app:slantedMode="right"
        app:slantedText=""
        app:slantedTextColor="@color/material_white"
        app:slantedTextSize="13sp" />


</android.support.v7.widget.CardView>