<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv0_item_recyclerview_laboratory_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4" />

    <TextView
        android:id="@+id/tv1_item_recyclerview_laboratory_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv2_item_recyclerview_laboratory_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center"
        android:textColor="@color/material_yellow_800" />

    <TextView
        android:id="@+id/tv3_item_recyclerview_laboratory_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center"
        android:textColor="@color/material_yellow_800" />

    <TextView
        android:id="@+id/tv4_item_recyclerview_laboratory_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center"
        android:textColor="@color/material_yellow_800" />

    <TextView
        android:id="@+id/tv5_item_recyclerview_laboratory_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:gravity="center" />
</LinearLayout>