<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview1"
            style="@style/YalijiDetailTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荷载代表值：" />

        <TextView
            android:id="@+id/tv_hz_fragment_chart_yaliji_detail_activity"
            style="@style/YalijiDetailTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="650" />

        <TextView
            android:id="@+id/textview2"
            style="@style/YalijiDetailTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="荷载代表值：" />

        <TextView
            android:id="@+id/tv_qd_fragment_chart_yaliji_detail_activity"
            style="@style/YalijiDetailTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart_fragment_chart_yaliji_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
