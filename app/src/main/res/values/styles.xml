<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Font12Orange" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Title3">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blueText</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--对话框模块-->
    <style name="AppTheme.Dialog" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/dialog_background_scrim</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--登陆模块-->
    <style name="MaterialLoginTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="MaterialLoginTheme.SelectableItemTheme">
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>

    <style name="MaterialLoginTheme.SelectableItemBackground">
        <item name="android:theme">@style/MaterialLoginTheme.SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegister">
        <item name="android:textColor">@color/material_login_login_color</item>
        <item name="colorControlNormal">@color/material_login_login_color</item>
        <item name="android:textColorHint">@color/material_login_login_color</item>
        <item name="colorControlActivated">@color/material_login_login_color</item>
        <item name="colorControlHighlight">@color/material_login_login_color</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/material_login_register_color</item>
        <item name="colorControlNormal">@color/material_login_register_color</item>
        <item name="android:textColorHint">@color/material_login_register_color</item>
        <item name="colorControlActivated">@color/material_login_register_color</item>
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegisterError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_register_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--选择查询对话框模块-->
    <style name="MaterialDialogTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="MaterialDialogTheme.TextAppearanceDialogError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialDialogTheme.TextAppearanceDialog">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <!--压力机、万能机模块-->
    <style name="RecyclerViewItemTextTheme">
        <item name="android:textColor">@color/black_87_percent_alpha</item>
        <item name="android:padding">0.5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="YalijiDetailTextTheme">
        <item name="android:textColor">@color/black_87_percent_alpha</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">2</item>
    </style>

    <!--版本更新模块-->
    <style name="VersionTextTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">2</item>
    </style>

    <!--详情页模块-->
    <style name="DetailTextTheme">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_orange_400</item>
    </style>
</resources>
